<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingTop="30dp"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Hallo in CI-App!"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cis_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Es gibt *nummer* in CI-App!"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/added_cis_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Du hast *nummer* stories selbst eingefÃ¼gt"
        android:textSize="22sp" />


    <Button
        android:id="@+id/set_default_data_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Set up default data" />

    <Button
        android:id="@+id/generate_cis_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Generate 10 new CI examples" />

    <Button
        android:id="@+id/cleat_db_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Clear database" />

</LinearLayout>